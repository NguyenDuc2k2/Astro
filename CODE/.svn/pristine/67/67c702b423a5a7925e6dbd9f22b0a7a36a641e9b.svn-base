img {
    width: 100%;
    max-height: 500px;
    background-size: cover;
}

.btn-more {
    border: 2px solid #303F73;
    color: #303F73;
    padding: 3px 10px;
    border-radius: 10px;
    transition: all .2s ease-in-out;

    &:hover {
        background-color: #303F73;
        color: #ffffff;
        border-color: #ffffff;
    }
}

.regulations {
    position: relative;
    height: 600px;

    .regulations-content {
        position: absolute;
        bottom: 0;
        right: 0;
    }

    img {
        margin: auto;
    }
}